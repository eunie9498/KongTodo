<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wholeBtn"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/tabIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/ic_home_no_select" />

    <TextView
        android:id="@+id/tabTxt"
        style="@style/txt_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/base_selector"
        app:layout_constraintEnd_toEndOf="@id/tabIcon"
        app:layout_constraintStart_toStartOf="@id/tabIcon"
        app:layout_constraintTop_toBottomOf="@id/tabIcon"
        tools:text="tabTxt" />
</androidx.constraintlayout.widget.ConstraintLayout>